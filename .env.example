# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=7889

# Encryption (Generate your own secure keys)
ENCRYPTION_KEY=your_32_byte_hex_key_here
SALT=your_secure_salt_here

# Automation Configuration
ENABLE_AUTOMATION=true
CRON_SCHEDULE=* * * * *
TIME_WINDOW_MINUTES=6
EXTENDED_RETRY_HOURS=2
EMERGENCY_LOGOUT_START=22:00
EMERGENCY_LOGOUT_END=23:59
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# Data Storage (leave empty for local files, or set cloud storage URLs)
DATA_STORAGE_TYPE=local
# For cloud storage (future implementation):
# DATA_STORAGE_TYPE=cloud
# CLOUD_STORAGE_URL=
# CLOUD_STORAGE_API_KEY=

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true